{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "lib": ["esnext"],
  "include": ["src"]
}
